<div class="section-banner">
	<div class="banner banner--no-breadcrumbs{% if settings.account_show_hero_bg %} banner--bg banner--bg-color{% endif %}">
    <div class="banner__text container" data-cc-animate>
      <h1>{{ 'customer.reset_password.title' | t }}</h1>
      <div>{{ 'customer.reset_password.subtext' | t: email: email }}</div>
    </div>
  </div>
</div>

<div class="spaced-section container">
  <div class="section-content">
    <div class="general-form" data-cc-animate data-cc-animate-delay="0.1s">
      {% form 'reset_customer_password' %}
        {{ form.errors | default_errors }}

        <div class="large_form" id="password">
          <label class="large" for="password">{{ 'customer.reset_password.password' | t }}</label>
          <input class="large input password"
                 type="password"
                 name="customer[password]"
                 id="customer_password"
                 size="16">
        </div>
        <div class="large_form" id="password_confirm">
          <label class="large" for="password_confirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
          <input class="large input password"
                 type="password"
                 name="customer[password_confirmation]"
                 id="customer_password_confirmation"
                 size="16">
        </div>
        <div class="action_bottom">
          <button class="button" type="submit">{{ 'customer.reset_password.submit' | t }}</button>
        </div>
      {% endform %}
    </div>
  </div>
</div>
